// export default MedicalWebsite;

import React, { useEffect, useRef, useState } from "react";
import {
  Activity,
  Brain,
  Stethoscope,
  HeartPulse,
  Syringe,
  PhoneCall,
  Mail,
  MapPin,
} from "lucide-react";
import "./MedicalWebsite.css";

const services = [
  {
    icon: Activity,
    title: "General Medicine",
    description:
      "Comprehensive primary care and internal medicine services for all age groups.",
  },
  {
    icon: Brain,
    title: "Neurology",
    description:
      "Advanced diagnosis and treatment of neurological disorders and diseases.",
  },
  {
    icon: Stethoscope,
    title: "Diagnostic Center",
    description:
      "State-of-the-art diagnostic tools including MRI, CT scans, and lab tests.",
  },
  {
    icon: HeartPulse,
    title: "Cardiology",
    description:
      "Specialized cardiac care including ECG, angiography, and heart checkups.",
  },
  {
    icon: Syringe,
    title: "Vaccination",
    description:
      "Immunization services for adults, children, travelers, and corporate needs.",
  },
];

const MedicalWebsite = () => {
  const horizontalRef = useRef(null);
  const [activeSection, setActiveSection] = useState("home");

  // Smooth horizontal scroll sync with vertical scrolling
  useEffect(() => {
    const section = horizontalRef.current;
    if (!section) return;

    const handleScroll = () => {
      const rect = section.getBoundingClientRect();

      if (rect.top <= 0 && rect.bottom >= window.innerHeight) {
        document.body.style.overflowX = "hidden";

        const scrollProgress =
          ((0 - rect.top) / (section.scrollWidth - rect.width)) *
          section.scrollWidth;

        section.scrollLeft = scrollProgress;
      }
    };

    window.addEventListener("scroll", handleScroll);

    return () => {
      window.removeEventListener("scroll", handleScroll);
    };
  }, []);

  // Highlight active navbar link
  useEffect(() => {
    const sections = document.querySelectorAll("section");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) setActiveSection(entry.target.id);
        });
      },
      { threshold: 0.6 }
    );

    sections.forEach((s) => observer.observe(s));

    return () => {
      sections.forEach((s) => observer.unobserve(s));
    };
  }, []);

  return (
    <div className="w-full bg-gray-50 text-gray-900">
      {/* Navbar */}
      <nav className="fixed top-0 left-0 w-full bg-white shadow-md z-50 py-4 px-8 flex justify-between items-center">
        <h1 className="text-2xl font-bold text-blue-600">Medicare+</h1>

        <ul className="hidden md:flex gap-8 font-medium">
          {["home", "about", "specialties", "whyus", "services", "contact"].map(
            (item) => (
              <li key={item}>
                <a
                  href={`#${item}`}
                  className={`hover:text-blue-600 transition ${
                    activeSection === item ? "text-blue-600 font-bold" : ""
                  }`}
                >
                  {item.toUpperCase()}
                </a>
              </li>
            )
          )}
        </ul>
      </nav>

      {/* Hero Section */}
      <section
        id="home"
        className="h-screen flex items-center justify-center px-8 pt-20 bg-gradient-to-r from-blue-100 to-blue-50"
      >
        <div className="text-center animate-fadeIn">
          <h2 className="text-5xl font-bold text-blue-700">
            Your Health, Our Priority
          </h2>
          <p className="text-lg mt-4 text-gray-600">
            Experience world-class medical care with advanced technology.
          </p>
          <a
            href="#contact"
            className="mt-6 inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition"
          >
            Book Appointment
          </a>
        </div>
      </section>

      {/* About Section */}
      <section id="about" className="py-20 px-8 bg-white">
        <div className="max-w-5xl mx-auto text-center animate-fadeInUp">
          <h2 className="text-4xl font-bold text-blue-600">About Us</h2>
          <p className="mt-4 text-gray-600 text-lg leading-relaxed">
            Medicare+ is a trusted healthcare provider offering quality medical
            services, diagnostics, specialists, and emergency support for all
            age groups.
          </p>
        </div>
      </section>

      {/* Specialties */}
      <section id="specialties" className="py-20 px-8 bg-gray-100">
        <div className="max-w-6xl mx-auto">
          <h2 className="text-4xl font-bold text-blue-600 text-center">
            Our Specialties
          </h2>

          <div className="grid md:grid-cols-3 gap-10 mt-12">
            {services.map((service, i) => (
              <div
                key={i}
                className="p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition animate-slideInUp"
              >
                <service.icon className="w-12 h-12 text-blue-600 mb-4" />
                <h3 className="text-xl font-semibold">{service.title}</h3>
                <p className="text-gray-600 mt-2">{service.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      {/* Why Choose Us */}
      <section id="whyus" className="py-20 px-8 bg-white">
        <div className="max-w-6xl mx-auto text-center animate-fadeInUp">
          <h2 className="text-4xl font-bold text-blue-600">Why Choose Us?</h2>

          <div className="grid md:grid-cols-3 gap-10 mt-12">
            {[
              "Experienced Doctors",
              "24/7 Emergency Care",
              "Advanced Technology",
            ].map((item, i) => (
              <div
                key={i}
                className="p-6 bg-gray-100 rounded-xl shadow hover:shadow-lg transition"
              >
                <h3 className="text-xl font-semibold">{item}</h3>
              </div>
            ))}
          </div>
        </div>
      </section>

      {/* Horizontal Scroll Section */}
      <section
        id="services"
        className="relative h-screen bg-blue-50 flex items-center"
      >
        <div
          ref={horizontalRef}
          className="flex overflow-x-auto snap-x snap-mandatory w-full h-full px-10 gap-10"
        >
          {services.map((service, i) => (
            <div
              key={i}
              className="min-w-[70%] bg-white p-10 rounded-xl shadow-xl snap-center"
            >
              <service.icon className="w-14 h-14 text-blue-600" />
              <h3 className="text-3xl font-bold mt-4">{service.title}</h3>
              <p className="text-gray-600 mt-2">{service.description}</p>
            </div>
          ))}
        </div>
      </section>

      {/* Contact Section */}
      <section id="contact" className="py-20 px-8 bg-white">
        <div className="max-w-5xl mx-auto">
          <h2 className="text-4xl font-bold text-blue-600 text-center">
            Contact Us
          </h2>

          <div className="grid md:grid-cols-2 gap-10 mt-12">
            {/* Contact Form */}
            <form className="space-y-6 w-full">
              <input
                type="text"
                placeholder="Your Name"
                className="w-full px-4 py-3 border rounded-lg"
                required
              />
              <input
                type="email"
                placeholder="Your Email"
                className="w-full px-4 py-3 border rounded-lg"
                required
              />
              <textarea
                placeholder="Your Message"
                rows="5"
                className="w-full px-4 py-3 border rounded-lg"
                required
              ></textarea>

              <button className="w-full py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                Send Message
              </button>
            </form>

            {/* Contact Info */}
            <div className="space-y-6">
              <div className="flex items-center gap-4">
                <PhoneCall className="w-8 h-8 text-blue-600" />
                <p>+91 98765 43210</p>
              </div>
              <div className="flex items-center gap-4">
                <Mail className="w-8 h-8 text-blue-600" />
                <p>support@medicare.com</p>
              </div>
              <div className="flex items-center gap-4">
                <MapPin className="w-8 h-8 text-blue-600" />
                <p>New Delhi, India</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  );
};

export default MedicalWebsite;
